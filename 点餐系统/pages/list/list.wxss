/* pages/list/list.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 折扣区域样式 */
.discount {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  background: #fef9e6;
  font-size: 28rpx;
  text-align: center;
  color: #999;
}

.discount-txt {
  color: #fff;
  padding: 5rpx 10rpx;
  background: red;
  margin-right: 15rpx;
}

/* 内容区域样式 */
.content {
  display: flex;
  flex: 1;
  overflow: hidden;
}

/* 左侧菜单栏样式 */
.category {
  width: 202rpx;
  height: 100%;
  background: #fcfcfc;
}

.category-item {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

.category-item.active {
  background: #fff;
  color: #ff9c35;
  border-left: 6rpx solid #ff9c35;
}

/* 右侧商品列表样式 */
.food {
  flex: 1;
  background: #fff;
}

.food-category {
  font-size: 24rpx;
  background: #f3f4f6;
  padding: 10rpx;
  color: #ff9c35;
}

.food-item {
  display: flex;
  margin: 40rpx 20rpx;
}

.food-item-pic {
  width: 94rpx;
  height: 94rpx;
  margin-right: 20rpx;
}

.food-item-pic image {
  width: 100%;
  height: 100%;
}

.food-item-info {
  flex: 1;
  font-size: 30rpx;
}

.food-item-price {
  color: #f05a86;
  margin-top: 14rpx;
}

.food-item-opt {
  width: 50rpx;
  display: flex;
  align-items: center;
}
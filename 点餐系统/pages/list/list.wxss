/* pages/list/list.wxss */
.page-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f7f7f7;
}

/* 优惠信息 */
.discount {
  padding: 20rpx;
  background: #fef9e6;
  font-size: 28rpx;
  color: #666;
  display: flex;
  align-items: center;
}

.discount-tag {
  color: #fff;
  background: #f56c6c;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
  font-size: 24rpx;
}

/* 内容区域 */
.content {
  flex: 1;
  display: flex;
  overflow: hidden;
}

/* 左侧分类 */
.category {
  width: 200rpx;
  height: 100%;
  background: #f7f7f7;
}

.category-item {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
  text-align: center;
}

.category-item.active {
  background: #fff;
  color: #ff9c35;
  font-weight: bold;
}

.category-item.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 32rpx;
  background: #ff9c35;
  border-radius: 0 4rpx 4rpx 0;
}

/* 右侧商品列表 */
.food {
  flex: 1;
  background: #fff;
}

.food-category {
  padding: 20rpx;
}

.category-title {
  font-size: 28rpx;
  color: #999;
  padding: 10rpx 0;
}

.food-list {
  display: flex;
  flex-direction: column;
}

.food-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.food-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.food-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.food-name {
  font-size: 30rpx;
  color: #333;
}

.food-price {
  font-size: 32rpx;
  color: #ff9c35;
  font-weight: bold;
}

.food-add {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: #ff9c35;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  align-self: flex-end;
  margin-bottom: 10rpx;
}

/* 购物车动画小球 */
.cartBall {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 999;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #ff9c35;
  pointer-events: none;
  will-change: transform;
  box-shadow: 0 0 4rpx rgba(0,0,0,0.2);
}

.ball-inner {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: #ff9c35;
}

/* 底部购物车栏 */
.cart-bar {
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.cart-content {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.cart-icon {
  width: 80rpx;
  height: 80rpx;
  background: #353535;
  border-radius: 50%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  transform: translateY(-20rpx);
  z-index: 10;
}

.cart-icon .iconfont {
  color: #87888e;
}

.cart-icon.active .iconfont {
  color: #ff9c35;
}

.cart-badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  padding: 0 6rpx;
  border-radius: 16rpx;
  background: #f56c6c;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
}

.cart-info {
  flex: 1;
}

.cart-empty {
  color: #999;
  font-size: 28rpx;
}

.cart-price {
  font-size: 36rpx;
  color: #ff9c35;
  font-weight: bold;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 10rpx;
}

.cart-submit {
  width: 200rpx;
  height: 100%;
  background: #ccc;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.cart-submit.active {
  background: #ff9c35;
}

/* 购物车列表弹窗 */
.cart-popup {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  transform: translateY(100%);
  transition: all 0.3s;
  z-index: 99;
}

.cart-popup.show {
  transform: translateY(0);
}

.cart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.cart-title {
  font-size: 30rpx;
  color: #333;
}

.cart-clear {
  color: #ff9c35;
  font-size: 28rpx;
}

.cart-list {
  max-height: 600rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.item-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.item-price {
  font-size: 28rpx;
  color: #ff9c35;
  margin: 0 40rpx;
}

.item-control {
  display: flex;
  align-items: center;
}

.control-btn {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border: 1rpx solid #eee;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
}

.number {
  width: 60rpx;
  text-align: center;
  font-size: 28rpx;
}

/* 引入字体图标 */
@font-face {
  font-family: 'iconfont';
  src: url('data:font/woff2;charset=utf-8;base64,') format('woff2');
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 48rpx;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-cart:before {
  content: "\e73c";
}
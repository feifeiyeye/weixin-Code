/* pages/record/record.wxss */
.page-container {
  min-height: 100vh;
  background: #f8f8f8;
}

/* 加载状态 */
.loading-container,
.error-container,
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  color: #666;
}

.error-container text {
  color: #f56c6c;
  margin-bottom: 20rpx;
}

.retry-btn {
  width: 200rpx;
  margin-top: 20rpx;
  font-size: 28rpx;
  background: #ff9c35;
  color: #fff;
  border: none;
}

/* 头部区域 */
.header {
  width: 100%;
  height: 400rpx;
  background: linear-gradient(180deg, #7982a3 0%, #6b7396 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.avatar-wrapper {
  width: 160rpx;
  height: 160rpx;
  padding: 0;
  background: none;
  border-radius: 50%;
  margin-bottom: 40rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.2);
}

.total-amount {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.amount {
  font-size: 48rpx;
  font-weight: bold;
  margin-top: 20rpx;
}

/* 内容区域 */
.content {
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  margin-top: -20rpx;
  min-height: 400rpx;
}

.list-title {
  padding: 30rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  border-bottom: 1rpx solid #f5f5f5;
}

/* 记录列表 */
.record-list {
  padding: 0 30rpx;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.record-info {
  flex: 1;
}

.record-type {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.record-time {
  font-size: 26rpx;
  color: #999;
}

.time {
  margin-left: 20rpx;
}

.record-amount {
  font-size: 32rpx;
  color: #f7982a;
  font-weight: bold;
}

/* 空状态 */
.empty-container {
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}
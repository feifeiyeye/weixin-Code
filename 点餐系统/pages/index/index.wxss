/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

/* 滚动区域 */
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

/* 加载状态 */
.loading-container,
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  color: #666;
}

.error-container text {
  color: #ff4444;
  margin-bottom: 20rpx;
}

.retry-btn {
  width: 200rpx;
  margin-top: 20rpx;
  font-size: 28rpx;
  background: #FF9C35;
  color: #fff;
  border: none;
}

/* 轮播图 */
.swiper {
  height: 350rpx;
  background: #fff;
}

.swiper image {
  width: 100%;
  height: 100%;
}

/* 菜单区域 */
.menu-bar {
  padding: 30rpx 0;
  background: #fff;
  margin: 20rpx 0;
}

.menu-block {
  display: flex;
  justify-content: center;
}

.menu-start {
  text-align: center;
  font-size: 38rpx;
  color: #fff;
  padding: 16rpx 80rpx;
  background: #ff9c35;
  border-radius: 80rpx;
  box-shadow: 0 4rpx 8rpx rgba(255, 156, 53, 0.3);
  transition: all 0.3s ease;
}

.menu-start:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 4rpx rgba(255, 156, 53, 0.3);
}

/* 广告区域 */
.ad-box {
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.ad-image {
  width: 100%;
  height: 336rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 底部分类 */
.bottom-box {
  padding: 0 20rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.bottom-pic {
  width: 100%;
}

.bottom-image {
  width: 100%;
  height: 170rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

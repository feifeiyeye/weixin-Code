/* pages/order/detail/detail.wxss */
.page-container {
  min-height: 100vh;
  background: #f8f8f8;
}

/* 加载状态 */
.loading-container,
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  color: #666;
}

.error-container text {
  color: #f56c6c;
  margin-bottom: 20rpx;
}

.retry-btn {
  width: 200rpx;
  margin-top: 20rpx;
  font-size: 28rpx;
  background: #ff9c35;
  color: #fff;
  border: none;
}

/* 取餐卡片 */
.card {
  margin: 20rpx;
  background: #fef9f4;
  border-radius: 12rpx;
  display: flex;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.card-title {
  width: 28rpx;
  padding: 30rpx;
  background: #de5f4b;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  writing-mode: vertical-lr;
  letter-spacing: 4rpx;
}

.card-content {
  flex: 1;
  padding: 30rpx 40rpx;
}

.card-info {
  display: flex;
  align-items: center;
}

.card-code {
  font-size: 60rpx;
  font-weight: bold;
  margin-right: 40rpx;
}

.card-status {
  font-size: 24rpx;
  color: #ff9c35;
}

.card-comment {
  color: #de5f4b;
  font-weight: 600;
  margin-top: 20rpx;
}

.card-tips {
  color: #999;
  font-size: 24rpx;
  margin-top: 20rpx;
}

/* 订单详情 */
.order {
  margin-top: 20rpx;
  background: #fff;
  padding: 0 30rpx;
}

.order-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-item-left {
  display: flex;
  align-items: center;
}

.order-item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.order-item-info {
  display: flex;
  flex-direction: column;
}

.order-item-name {
  font-size: 28rpx;
  color: #333;
}

.order-item-number {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.order-item-price {
  font-size: 28rpx;
  color: #ff9c35;
  font-weight: bold;
}

/* 优惠信息 */
.promotion-tag {
  color: #fff;
  background: #ff9c35;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  margin-right: 10rpx;
}

.promotion-price {
  color: #ff9c35;
  font-weight: bold;
}

.total-price {
  color: #ff9c35;
  font-size: 32rpx;
  font-weight: bold;
}

/* 订单信息列表 */
.info-list {
  margin-top: 20rpx;
  background: #fff;
  padding: 0 30rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 28rpx;
}

.info-label {
  color: #999;
}

.info-value {
  color: #333;
}

.info-taken {
  padding: 30rpx 0;
  text-align: center;
  color: #ff9c35;
  font-size: 28rpx;
}
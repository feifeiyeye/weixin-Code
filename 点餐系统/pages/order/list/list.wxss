/* pages/order/list/list.wxss */
.list-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #ececec;
  color: #999;
  font-size: 26rpx;
}

.list-item:last-child {
  border-bottom: 0;
}

.list-item-l {
  flex: 1;
}

.list-item-r {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-end;
}

.list-item-t {
  margin-bottom: 10rpx;
}

.list-item-name {
  color: #333;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.list-item-price {
  color: #ff5339;
}

.list-item-detail {
  color: #576b95;
  font-size: 24rpx;
}

.list-item-taken {
  font-size: 24rpx;
  padding: 17rpx 10rpx;
}

.list-item-taken-yes {
  background: #d2d2d2;
  color: #999;
}

.list-item-taken-no {
  background: #ffd161;
  color: #fff;
}

.list-empty {
  margin-top: 80rpx;
  text-align: center;
  color: #999;
}

.list-item-last {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}
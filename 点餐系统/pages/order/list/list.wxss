/* pages/order/list/list.wxss */
.page-container {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 加载状态 */
.loading-container,
.error-container,
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  color: #666;
}

.error-container text {
  color: #f56c6c;
  margin-bottom: 20rpx;
}

.retry-btn {
  width: 200rpx;
  margin-top: 20rpx;
  font-size: 28rpx;
  background: #ff9c35;
  color: #fff;
  border: none;
}

/* 空状态 */
.empty-container {
  padding-top: 200rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

/* 订单列表 */
.order-list {
  padding: 20rpx;
}

.order-item {
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.order-info {
  padding: 30rpx;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.order-time {
  font-size: 26rpx;
  color: #999;
}

.order-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  background: #ffd161;
  color: #fff;
}

.order-status.taken {
  background: #d2d2d2;
}

.order-content {
  margin-bottom: 20rpx;
}

.food-name {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}

.food-count {
  font-size: 26rpx;
  color: #999;
}

.food-price {
  float: right;
  color: #ff5339;
  font-size: 28rpx;
  font-weight: bold;
}

.order-footer {
  text-align: right;
  border-top: 1rpx solid #f5f5f5;
  padding-top: 20rpx;
}

.detail-btn {
  color: #576b95;
  font-size: 24rpx;
}

/* 底部提示 */
.list-footer {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 24rpx;
}
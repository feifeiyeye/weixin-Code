/* pages/order/checkout/checkout.wxss */
.page-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f8f8f8;
}

/* 加载状态 */
.loading-container,
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  color: #666;
}

.error-container text {
  color: #f56c6c;
  margin-bottom: 20rpx;
}

.retry-btn {
  width: 200rpx;
  margin-top: 20rpx;
  font-size: 28rpx;
  background: #ff9c35;
  color: #fff;
  border: none;
}

/* 内容区域 */
.content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.content-title {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  background: #fff;
  padding: 0 30rpx;
  color: #333;
}

/* 订单信息 */
.order {
  background: #fff;
  margin-top: 20rpx;
  padding: 0 30rpx;
}

.order-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.order-item-left {
  display: flex;
  align-items: center;
}

.order-item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.order-item-info {
  display: flex;
  flex-direction: column;
}

.order-item-name {
  font-size: 28rpx;
  color: #333;
}

.order-item-number {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.order-item-price {
  font-size: 28rpx;
  color: #ff9c35;
  font-weight: bold;
}

/* 优惠信息 */
.promotion-tag {
  color: #fff;
  background: #ff9c35;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  margin-right: 10rpx;
}

.promotion-price {
  color: #ff9c35;
  font-weight: bold;
}

.total-price {
  color: #ff9c35;
  font-size: 32rpx;
  font-weight: bold;
}

/* 备注区域 */
.comment-section {
  margin-top: 20rpx;
  padding: 20rpx 30rpx;
  background: #fff;
}

.comment-label {
  font-size: 28rpx;
  color: #666;
}

.comment-input {
  width: 100%;
  height: 160rpx;
  font-size: 28rpx;
  background: #f8f8f8;
  padding: 20rpx;
  margin-top: 20rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
}

/* 支付区域 */
.operate {
  height: 100rpx;
  display: flex;
  align-items: center;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.price-info {
  flex: 1;
  padding-left: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #ff9c35;
}

.submit-btn {
  width: 240rpx;
  height: 100%;
  font-size: 32rpx;
  color: #fff;
  background: #ff9c35;
  border-radius: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn.disabled {
  background: #ccc;
}

/* 适配 iPhone X 底部区域 */
.operate {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
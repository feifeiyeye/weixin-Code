/* pages/apply/apply-data-b.wxss */
@import "/pages/visa/visa-detail.wxss";
@import "/pages/apply/apply.wxss";

page {
  background: #fff;
}

.apply_data {
  padding: 0 20rpx 110rpx;
}

.apply_data_head {
  text-align: center;
  padding: 30rpx 0;
  display: flex;
  flex-direction:column;
  align-items: center;
}

.apply_data_hn {
  font-size: 30rpx;
  margin-top: 12rpx;
}

.apply_data_hn view {
  display: inline-block;
  margin: 0 12rpx;
  line-height: 50rpx;
}

.apply_data_hn.font_c {
  font-size: 32rpx;
}

.apply_data_hn.font_d {
  font-size: 28rpx;
}

.apply_data_see {
  font-size: 30rpx;
  color: #ff5a60;
}

.apply_data_cell {
  border-top: 1rpx solid #e9e9e9;
}

.apply_data_ctit {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  height: 110rpx;
  color: #6f6f6f;
  font-size: 32rpx;
  font-weight: 500;
}

.apply_data_ccon {
  font-size: 0;
  padding-bottom: 20rpx;
}

.apply_data_li {
  display: inline-flex;
  align-items: center;
  color: #777;
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  min-height: 70rpx;
  line-height: 1.5;
  box-sizing: border-box;
  border: 1rpx solid #f2f2f2;
  border-radius: 8rpx;
  margin: 0 10px 10px 0;
  position: relative;
}

.apply_data_li:before {
  content: "";
  position: absolute;
  right: -1rpx;
  bottom: -1rpx;
  width: 40rpx;
  height: 40rpx;
  background-repeat: no-repeat;
  background-size: 40rpx 40rpx;
}

.apply_data_li.finish {
  color: #ff5a60;
}

.apply_data_li.finish:before {
  background-image: url(http://visa.oss-cn-shenzhen.aliyuncs.com/icon/wxa/applicant/check.png);
}

.apply_data_li.passed:before {
  background-image: url(http://visa.oss-cn-shenzhen.aliyuncs.com/icon/wxa/applicant/passed.png);
}

.apply_data_li.wrong:before {
  background-image: url(http://visa.oss-cn-shenzhen.aliyuncs.com/icon/wxa/applicant/nopassed.png);
}

.circle_p {
  width: 100%;
  height: 100px;
  display: flex;
  align-items: center;
  justify-content:center;
  position: relative;
}

.circle_p .circle_canvas {
  width: 90px;
  height: 90px;
  justify-content:center;
  align-items: center;
  z-index:0;
}

.circle_p .circle_progress_canvas_text {
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 99;
  color: #aaa;
  height: 100px;
  width: 100%;
}

.circle_progress_canvas_text .text_1 {
  font-size: 20px;
}

.circle_progress_canvas_text .text_2 {
  margin-left: 2px;
  font-size: 16px;
}

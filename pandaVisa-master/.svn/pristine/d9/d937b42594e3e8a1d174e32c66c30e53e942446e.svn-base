/* pages/apply/addr/addr-list.wxss */
page{
    background: #fff;
    border-bottom: 110rpx;
}
.addr_list{
    padding-left: 20rpx;
}
.addr_li{
    display: flex;
    align-items: center;
    box-sizing: border-box;
    padding: 20rpx 20rpx 20rpx 0;
    border-bottom: 1rpx solid #e9e9e9;
    height: 130rpx;
}
.addr_cont{
    flex: 1;
    font-size: 28rpx;
    color: #6f6f6f;
    line-height: 44rpx;
}
.addr_line{
    display: flex;
    align-items: center;
}
.addr_name{
    font-size: 30rpx;
    color: #444;
    margin-right: 40rpx;
}
.addr_tel{
    margin-right: 40rpx;
}
.addr_li .addr_span{
    display: none;
}
.addr_li.this .addr_cont,
.addr_li.this .addr_name{
    color: #ff5a60;
}
.addr_li.this .addr_span{
    display: inline-flex;
    background: #ff5a60;
    color: #fff;
    padding: 0 10rpx;
    border-radius: 10rpx;
    font-size: 24rpx;
}
.addr_edit_btn{
    width: 36rpx;
    height: 36rpx;
}
.addr_edit_btn image{
    width: 100%;
    height: 100%;
}
/* pages/index/index.wxss */
page{
    padding-bottom: 20rpx;
}
.list_box{     
    display: flex;
    align-items: center;
    justify-content: center;
    height: 370rpx;
    margin: 10rpx 10rpx 0;
    position: relative;
}
.list_item_img{ 
    width: 100%;
    height: 100%;
    border-radius:10rpx;
}
.list_item_word{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 370rpx;
    color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.list_item_country{
    font-size: 40rpx;
    font-weight: bold;
    padding-bottom: 20rpx;
}
.list_item_ps{
    font-size: 24rpx;
    font-weight: bold;
    font-family: "PingFangSC-Medium";
}
.widget{
    width:100%;
}
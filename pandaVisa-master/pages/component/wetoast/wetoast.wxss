/**toast.wxss**/
.wetoast {
	display: none;
}
.wetoast_show {
	display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    position: absolute;
}
.wetoast__mask {
    position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
}
.wetoast__bd {
	opacity: 0;
	display: flex;
	flex-direction: column;
	position: fixed;
    z-index: 5000;
    min-width: 252.4rpx;
    min-height: 192.4rpx;
    max-width: 70%;
    top: 300rpx;
    left: 50%;
    padding: 18rpx;
    box-sizing: border-box;
    transform: translateX(-50%);
    background: rgba(40, 40, 40, 0.75);
    border-radius: 10rpx;
    color: #FFFFFF;
    word-wrap: break-word;
    word-break: break-all;
    align-items: center;
	justify-content: space-around;
}
.wetoast__bd__img {
	margin-top: 10rpx;
}
.wetoast__bd__img_desc {
    width: 70rpx;
    height: 70rpx;
    vertical-align: middle;
}
.wetoast__bd__title {
	margin: 10rpx 0;
	font-size: 28rpx;
    text-align: center
}
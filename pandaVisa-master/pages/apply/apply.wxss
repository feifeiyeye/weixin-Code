/* pages/apply/apply.wxss */
@import "/pages/order/order-detail.wxss";
@import "/pages/apply/addr/addr-list.wxss";
page{
    background: #f3f4f6;
    padding-bottom: 110rpx;
}
.process.ddqr{
    background: #f3f4f6;
    height: 100%;
}
.apply_div{
    background: #f3f4f6;    
}

.apply_cont{
    padding-left: 18rpx;
    border-bottom: 1rpx solid #e9e9e9; 
    background: #fff;
}
.apply_block{    
    border-top: 1rpx solid #e9e9e9; 
}
.apply_cont .apply_block:first-child{
    border-top: 0;
}
.apply_li{
    display: flex;
    align-items: center;
    min-height: 50px;
    font-size: 30rpx;
    color: #6f6f6f;
    position: relative;
    overflow: hidden;
    box-sizing: border-box;
    padding: 0rpx 0;
}
.apply_li:before{
    content: "";
    position: absolute;
    top: 0;
    width: 100%;
    height: 1rpx;
    border-top: 1rpx solid #e9e9e9;
    left: 250rpx;
}
.apply_block .apply_li:first-child:before{
    display: none;
}
.apply_li_n{  
    width: 250rpx; 
    padding-left: 2;
}
.apply_li_c{
    flex: 1;
    color: #444;
}

.apply_li.unfocus{
    color: #aaa;
}
.apply_li.apply_check{
    align-items: flex-start;
}
.apply_li.apply_check .apply_li_n{
    display: block;
    padding-top: 34rpx;
    width: auto;
    max-width: 250rpx;
}
.apply_li.apply_check .apply_li_c{
    padding: 34rpx 0 0 0;
}
.check_li{
    margin: 0 0 34rpx 50rpx;
}
.apply_li_c .check_li_text {
    min-width: 80rpx;
    padding-left: 6rpx;
}

/* 保存按钮 */
.apply_button{
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    height: 50px;
    font-size: 30rpx;
    color: #aaa;
    background: #fbfbfb;
    border-bottom: 1rpx solid #e9e9e9;
    box-sizing: border-box;
}
.apply_button .hollow_btn_red{    
    font-size: 30rpx;    
    display: block;
    width: 660rpx;
    height: 64rpx;
    line-height: 62rpx;
}
/* 申请信息部分 */
.apply_cells{
    background: #f3f4f6;
    padding-bottom: 54rpx;
}
.apply_cell{
    display: flex;
    align-items: center;
    min-height: 100rpx;
    color: #444;
    font-size: 30rpx;
    background: #fff;
    padding: 10rpx 20rpx;
    border-bottom: 1rpx solid #e9e9e9;
    box-sizing: border-box;
}
.apply_cell_image{
    width: 12px; 
    height: 12px; 
    margin-left:10rpx; 
    position: static;
    background-color: transparent;
}
.apply_cell_highlighted_background{
    background: #f3f4f6;
}
.apply_cell_n{
    flex:1;
    padding-left: 30rpx 0;
}
.apply_cell_s{
    background-repeat: no-repeat; 
    background-position: right;
    background-size: 24rpx 24rpx;
}
.apply_cell_s_highlighted_arrow{
    background-image: url(/image/arrowdown.png);
}
.apply_cell_s.finish{
    color: #aaa;
}
.apply_cell_s.wri{
    color: #ff5a60;
}
.apply_cell_s.edit{
    color: #6f6f6f;
}

/* 新增 */
.apply_addspan{
    line-height: 90rpx;
    text-align: right;
    padding: 0 20rpx;
    color: #ff5a60;
    font-size: 30rpx;
}
.apply_cells.visited_list .apply_div{
    margin-top: 20rpx;
}

/*申请列表*/
.apply_cells.list{
    background: #fff;
}
.apply_cells.list .apply_cell{
    min-height: 180rpx;
    padding: 20rpx;
}

/*确认订单*/

.re_order{
    padding-bottom: 30rpx;
}

.addr_border{
    display: flex;
    height: 4rpx;
    font-size: 0;
    overflow: hidden;
}
.addr_border view{
    width: 32rpx;
    font-size: 0;
}
.re_order_addr{
    display: flex;
    background: #fff;
    margin-bottom: 24rpx;
    padding: 0 20rpx;
}
.re_order_addr .addr_li{
    flex: 1;
    border: 0;
    background: url(/image/arrowright2.png) no-repeat right;
    background-size: 24rpx 24rpx;
    padding-right: 30rpx;
}
.re_order_addbtn{
    display: inline-flex;
    align-items: center;
    color: #ff5a60;
    font-size: 26rpx;
    height: 70rpx;
    border: 1rpx dashed #ff5a60;
    margin: 40rpx auto;
}

.my_order_box{
    background: #fff;
}
wx-text.order_result_text{
    color: #aaa;
}

.order_tic{
    margin-top: 20rpx;
    background: #fff;
}
.order_tic_tit{
    display: flex;
    align-items: center;
    height: 90rpx;
    padding: 0 20rpx;
    font-size: 30rpx;
    border-bottom: 1rpx solid #e9e9e9;
}
.order_tic_con{
    padding-left: 80rpx;
}
.order_tic_cli{
    display: flex;
    align-items: center;
    height: 90rpx;
    font-size: 30rpx;
    color: #6f6f6f;
    border-bottom: 1rpx solid #e9e9e9;
}
.order_tic_ccon{
    padding-left: 40rpx;
}
.order_tic_tit .group{
    flex: 1;
    text-align: right;
}
.re_order .check_li{
    margin: 0;
}
.order_tic_ccon .check_li{
    margin: 0 60rpx 0 0;
}
.order_tic_ccon .check_li_text{
    min-width: 80rpx;
}
.order_tic_ccon input{
    font-size: 28rpx;
}
.order_tic_span{
    display: flex;
    align-items: center;
    box-sizing: border-box;
    min-height: 120rpx;
    padding: 20rpx 40rpx 20rpx 0;
    font-size: 26rpx;
    color: #aaa;
    line-height: 40rpx;
}
/*填写申请表*/
.apply_cell_s.right{    
    padding-right: 36rpx;
    background-image: url(https://visa.oss-cn-shenzhen.aliyuncs.com/icon/wxa/product/in.png);
    background-size: 16rpx 24rpx;
}
.apply_sub_n,.apply_sub_z{
    line-height: 60rpx;
}
.apply_sub_z{
    color: #aaa;
}
.apply_submit.addzx{
    padding-left: 0; 
}

/*错误提示*/
.apply_li.warning .apply_li_n{
    color: #ff5a60;
}
/*申请表资料添加*/
.apply_li.apply_person_add .apply_li_n{
    flex: 1;
}
.apply_li.apply_person_add .apply_cell_s{
    padding: 0 20rpx;
    flex: 1;
    text-align: right;
}
/* pages/order/order-detail.wxss */
@import "/pages/order/order.wxss";
.order_warp {
  min-height: 1200rpx;
  padding-bottom: 110rpx;
}

.addr_border{
    display: flex;
    height: 4rpx;
    font-size: 0;
    overflow: hidden;
}
.addr_border view{
    width: 32rpx;
    font-size: 0;
}
.express_header{
  min-height: 90rpx;
  background: #fff;
  padding:22rpx 22rpx;
  box-sizing: border-box;
   display: flex;
  align-content: center;
  justify-content:center;
  align-items: center;
}
.express_header image{
  justify-content: center;
  align-content: center;
  align-items: center;
}
.order_detail_box {
  background: #fff;
  margin-bottom: 30rpx;
}

.order_detail_box .order_contry {
  border: none;
  margin: 0 20rpx;
}

.order_detail_box .order_name_box {
  background: #fbfbfb;
  height: 140rpx;
  margin: 0;
  padding: 0 20rpx;
  justify-content: space-between;
}

.order_name_box .order_info {
  display: flex;
  align-items: center;
  height: 24rpx;
}

.order_type {
  color: #f98483;
  font-size: 28rpx;
  display: block;
  margin-top: 14rpx;
}

.order_info text {
  color: #6f6f6f;
  font-size: 28rpx;
  margin-right: 10rpx;
}

.order_info image {
  width: 24rpx;
  height: 24rpx;
}

.order_detail_box .order_line_bom {
  height: auto;
  min-height: 90rpx;
  font-size: 30rpx;
  justify-content: flex-end;
}

.order_mail_box {
  background: #fff;
  padding: 30rpx 20rpx;
  line-height: 40rpx;
}

.order_mail_addbox {
  color: #aaa;
  padding: 0 0 30rpx 0;
  border-bottom: 1px dashed #f0f0f0;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.order_mail_num {
  margin-left: 50rpx;
}

.order_mail_add {
  margin: 10rpx 0;
  display: block;
}

.order_mail_ordercont {
  font-size: 26rpx;
  color: #aaa;
}

.order_mail_ordercont .invoice_head {
  margin-right: 20rpx;
}

.order_btn_box_cancel {
  width: 200rpx;
  height: 88rpx;
  line-height: 88rpx;
  display: block;
  float: left;
  margin: 10rpx 20rpx 0 30rpx;
  font-size: 32rpx;
}

.order_btn_box_pay {
  width: 470rpx;
  height: 90rpx;
  line-height: 90rpx;
  display: block;
  float: left;
  margin: 10rpx 0 0 0;
  font-size: 32rpx;
}

.order_mail_list_box {
  background: #fff;
  margin: 30rpx 20rpx;
  border-radius: 5rpx;
  padding-bottom: 36rpx;
}

.order_mail_list_box_top {  
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 70rpx;
  padding: 0 30rpx;
}
.order_mail_list_box_top view{
  display: inline-flex;
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
  background: #f3f4f6;
}

.oreder_mail_list_mid {
  margin: 5rpx 0 0 0;
  text-align: center;
}

.oreder_mail_list_mid_title {
  font-size: 32rpx;
  color: #444;
  display: block;
  margin-bottom: 10rpx;
}

.oreder_mail_list_mid_stat {
  font-size: 24rpx;
}

.order_mail_list_mid_list {
  color: #aaa;
  margin-right: 20rpx;
}

.order_mail_list_mid_num {
  color: #aaa;
}

.order_mail_list_mid_nomail {
  color: #ff5a60;
}

.oreder_mail_list_contbox {
  width: 460rpx;
  margin: 10rpx auto 0;
}

.oreder_mail_list_cont_line {
  border-bottom: 1px solid #f0f0f0;
  height: 80rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  justify-content: space-between;
}

.oreder_mail_list_cont_name {
  color: #444;
}

.oreder_mail_list_cont_type {
  color: #6f6f6f;
  float: right;
}

.order_mail_dwadd {
  margin: 30rpx 30rpx;
  color: #aaa;
  font-size: 28rpx;
  padding-left: 65rpx;
  position: relative;
}

.order_mail_dwadd .mail_name {
  margin-right: 25rpx;
}

.order_mail_dwadd .mail_add {
  display: block;
}

.order_mail_dwadd image {
  width: 28rpx;
  height: 36rpx;
  position: absolute;
  left: 10rpx;
  top: 15rpx;
}

.oreder_mail_list_bom {
  text-align: center;
  margin: 36rpx auto 0;
  color: #f98483;
  font-size: 30rpx;
  width: 170rpx;
}

.pop_box_text_cont_postmail_title {
  color: #6f6f6f;
  font-size: 30rpx;
  margin: 30rpx 25rpx 0;
}

.pop_box_text_chosecom {
  margin: 0 30rpx;
  position: relative;
}

.pop_box_text_chosecom .chosecom, .pop_box_text_input input {
  font-size: 30rpx;
  color: #aaa;
  border: 1px solid #e9e9e9;
  height: 90rpx;
  line-height: 90rpx;
  padding-left: 20rpx;
  border-radius: 5rpx;
  margin-bottom: 30rpx;
}

.pop_box_text_chosecom .triangle {
  top: 40rpx;
  right: 20rpx;
}

.pop_box_text_input .placeholder {
  font-size: 3orpx;
  color: #aaa;
}

.pop_box_text_chosecom_btn {
  width: 530rpx;
  height: 90rpx;
  line-height: 90rpx;
  margin-bottom: 30rpx;
}

.order_cancel_box_stat {
  background: #fff;
  padding: 20rpx;
  font-size: 28rpx;
  color: #aaa;
  margin-bottom: 30rpx;
}

.order_cancel_box_stat text {
  display: block;
  margin: 10rpx 0;
}
